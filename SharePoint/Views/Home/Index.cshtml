
@(Html.Kendo().Grid<SharePoint.Models.Songs>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(p => p.Id).Filterable(false);
            columns.Bound(p => p.Title);
            columns.Bound(p => p.Author);
            columns.Bound(p => p.ReleaseDate);
            columns.Command(command => { command.Edit(); command.Destroy(); }).Width(160);

        })
        .ToolBar(toolbar => toolbar.Create())
        .Editable(editable => editable.Mode(GridEditMode.PopUp))
        .Pageable()
        .Sortable()
        .Scrollable()
        .Filterable()
        .HtmlAttributes(new { style = "height:550px;" })
        .DataSource(dataSource => dataSource
            .Ajax()
            .Model(model =>
            {
                model.Id(song => song.Id); // Specify the property which is the unique identifier of the model.
                model.Field(song => song.Id).Editable(false); // Make the OrderID property not editable.
            })
            .PageSize(20)
            .Read(read => read.Action("GetSongs", "Home"))
            .Create(create => create.Action("CreateSong", "Home"))
            .Update(update => update.Action("UpdateSong", "Home"))
            .Destroy(destroy => destroy.Action("DeleteSong", "Home"))
            )
    )

<script>
function onError(e) {
    console.log(e.status);
}
</script>