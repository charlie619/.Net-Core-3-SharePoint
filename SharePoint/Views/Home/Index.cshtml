
@(Html.Kendo().Grid<SharePoint.Models.Songs>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(p => p.Id).Filterable(false);
            columns.Bound(p => p.Title);
            columns.Bound(p => p.Author);
            columns.Bound(p => p.ReleaseDate);
            columns.Command(command => { command.Edit(); command.Destroy(); }).Width(160);

        })
        .ToolBar(toolbar => toolbar.Create())
        .Editable(editable => editable.Mode(GridEditMode.InLine))
        .Pageable()
        .Sortable()
        .Scrollable()
        .Filterable()
        .HtmlAttributes(new { style = "height:550px;" })
        .DataSource(dataSource => dataSource
            .Ajax()
            .Model(model =>
            {
                model.Id(song => song.Id); // Specify the property which is the unique identifier of the model.
                model.Field(song => song.Id).Editable(false); // Make the OrderID property not editable.
            })
            .PageSize(20)
            .Read(read => read.Action("GetSongs", "Home"))
            .Create(create => create.Action("CreateSong", "Home"))
            .Update(update => update.Action("UpdateSong", "Home"))
            .Destroy(destroy => destroy.Action("DeleteSong", "Home"))
            )
    )

<script type="text/javascript">

    //register custom validation rules
    $(document).ready(function () {

        $.extend(true, kendo.ui.validator, {
            rules: { // custom rules
                releaseDateValidation: function (input) {
                    //check if it is the ReleaseDate field                    
                    if (input.is("[name=ReleaseDate]") && input.val()) {
                        var a = input.val().split(".");
                        if (a.length < 2) {
                            input.attr("data-releasedatevalidation-msg", "Enter a valid month & year");
                            return false;
                        }
                        if (a[0] < 1 || a[0] > 12) {
                            input.attr("data-releasedatevalidation-msg", "Enter a valid month between (01 - 12)");
                            return false;
                        }
                        if (a[1] < 1900 || a[1] > 2022) {
                            input.attr("data-releasedatevalidation-msg", "Enter a valid year between (1900 - 2022)");
                            return false;
                        }                        
                    }
                    return true;
                }
            }
        });
    });    
</script>
    